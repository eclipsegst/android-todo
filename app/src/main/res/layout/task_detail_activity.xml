<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/task_detail_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhaolongzhong.todo.TaskDetailActivity">

    <TextView
        android:id="@+id/task_detail_activity_title_text_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/spacing_large"
        android:textSize="@dimen/text_medium"/>

    <TextView
        android:id="@+id/task_detail_activity_note_text_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_detail_activity_title_text_view_id"
        android:layout_margin="@dimen/spacing_large"
        android:textSize="@dimen/text_medium_small"/>

</RelativeLayout>
