<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhaolongzhong.todo.task.TaskDetailActivity">

    <!--<android.support.v7.widget.Toolbar-->
        <!--android:id="@+id/toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="?attr/actionBarSize"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:background="?attr/colorPrimary"-->
        <!--app:popupTheme="@style/AppTheme.PopupOverlay" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:padding="@dimen/spacing_large">

        <!-- Title -->
        <TextView
            android:id="@+id/task_detail_activity_title_label_text_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/spacing_small"

            android:text="Title"
            android:textSize="@dimen/text_medium"/>

        <TextView
            android:id="@+id/task_detail_activity_title_text_view_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/task_detail_activity_title_label_text_view_id"
            android:layout_margin="@dimen/spacing_small"

            android:padding="4dp"
            android:maxLines="1"
            android:background="@drawable/round_corner_border"
            android:textSize="@dimen/text_medium_small"
            android:textColor="@android:color/black"/>

        <!-- Note -->
        <TextView
            android:id="@+id/task_detail_activity_note_label_text_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/task_detail_activity_title_text_view_id"
            android:layout_margin="@dimen/spacing_small"

            android:text="@string/add_note"
            android:textSize="@dimen/text_medium"/>

        <TextView
            android:id="@+id/task_detail_activity_note_text_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/task_detail_activity_note_label_text_view_id"
            android:layout_margin="@dimen/spacing_small"

            android:padding="4dp"
            android:gravity="start|top|left"
            android:maxLines="4"
            android:minLines="4"
            android:background="@drawable/round_corner_border"
            android:textSize="@dimen/text_medium_small"
            android:textColor="@android:color/black"/>

        <!-- Due date -->
        <TextView
            android:id="@+id/task_detail_activity_due_date_label_text_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/task_detail_activity_note_text_view_id"
            android:layout_margin="@dimen/spacing_small"

            android:text="@string/add_due_date"
            android:textSize="@dimen/text_medium"/>

        <TextView
            android:id="@+id/task_detail_activity_due_date_text_view_id"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/task_detail_activity_due_date_label_text_view_id"
            android:layout_margin="@dimen/spacing_small"

            android:padding="4dp"
            android:background="@drawable/round_corner_border"
            android:textSize="@dimen/text_medium_small"
            android:textColor="@android:color/black"/>

        <!-- Priority -->
        <TextView
            android:id="@+id/task_detail_activity_priority_label_text_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/task_detail_activity_due_date_text_view_id"
            android:layout_margin="@dimen/spacing_small"

            android:text="@string/add_priority"
            android:textSize="@dimen/text_medium"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/task_detail_activity_priority_spinner_id"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/task_detail_activity_priority_label_text_view_id"
            android:layout_margin="@dimen/spacing_small"

            android:padding="4dp"
            android:background="@drawable/round_corner_border"
            android:textSize="@dimen/text_medium_small"
            android:textColor="@android:color/black"/>

        <!-- Status -->
        <TextView
            android:id="@+id/task_detail_activity_status_label_text_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/task_detail_activity_priority_spinner_id"
            android:layout_margin="@dimen/spacing_small"

            android:text="@string/add_status"
            android:textSize="@dimen/text_medium"/>

        <CheckBox
            android:id="@+id/task_detail_activity_status_check_box_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/task_detail_activity_status_label_text_view_id"
            android:layout_margin="@dimen/spacing_small"

            android:padding="4dp"/>

    </RelativeLayout>

</RelativeLayout>
